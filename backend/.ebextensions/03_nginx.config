files:
  "/etc/nginx/conf.d/proxy.conf":
    mode: "000644"
    owner: root
    group: root
    content: |
      client_max_body_size 20M;
      
  "/etc/nginx/conf.d/cors.conf":
    mode: "000644"
    owner: root
    group: root
    content: |
      # CORS headers are handled by Express app
      # This file ensures nginx doesn't interfere
      
container_commands:
  01_reload_nginx:
    command: "sudo service nginx reload"